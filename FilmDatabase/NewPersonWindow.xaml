<Window x:Class="FilmDatabase.NewPersonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FilmDatabase"
        mc:Ignorable="d"
        Title="Új személy" Height="250" Width="300">
    <Grid>
        <StackPanel Margin="20">
            <TextBox x:Name="txtFirstName" Text="" Margin="5"/>
            <TextBox x:Name="txtLastName" Text="" Margin="5"/>
            <TextBox x:Name="txtNationality" Text="" Margin="5"/>
            <DatePicker x:Name="dpBirthDate" Margin="5"/>

            <Button Content="Insert" Click="Insert_Click" Width="100" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
