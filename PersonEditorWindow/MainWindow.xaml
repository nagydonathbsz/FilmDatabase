<Window x:Class="FilmDatabase.PersonEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Adat műveletek" Height="300" Width="300" ResizeMode="NoResize">
    <StackPanel Margin="20">
        <TextBox x:Name="txtFirstName" PlaceholderText="First Name" Margin="0,5"/>
        <TextBox x:Name="txtLastName" PlaceholderText="Last Name" Margin="0,5"/>
        <DatePicker x:Name="dpBirthDate" Margin="0,5"/>
        <TextBox x:Name="txtPersonId" PlaceholderText="Person ID (for update/delete)" Margin="0,10"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
            <Button Content="Insert" Click="Insert_Click" Width="75" Margin="5"/>
            <Button Content="Update" Click="Update_Click" Width="75" Margin="5"/>
            <Button Content="Delete" Click="Delete_Click" Width="75" Margin="5"/>
        </StackPanel>
    </StackPanel>
</Window>